/* components/progress-bar/progress-bar.wxss */
.progress-container {
  width: 100%;
}

.progress-text {
  font-size: 24rpx;
  color: #718096;
  text-align: center;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.progress-bar {
  width: 100%;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 100rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  border-radius: 100rpx;
  transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}