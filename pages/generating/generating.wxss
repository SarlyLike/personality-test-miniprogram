/* pages/generating/generating.wxss */
.generating-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

/* 背景粒子效果 */
.particles-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.particle {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
    opacity: 0.3;
  }
  50% {
    transform: translateY(-30px) rotate(180deg);
    opacity: 0.8;
  }
}

/* 主要内容 */
.main-content {
  position: relative;
  z-index: 1;
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.title-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: bounce 2s ease-in-out infinite;
}

.title-text {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}

/* 生成区域 */
.generation-section {
  width: 100%;
  margin-bottom: 80rpx;
}

.generation-button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.generate-btn {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 60rpx;
  padding: 32rpx 64rpx;
  min-width: 400rpx;
  height: 120rpx;
  overflow: hidden;
  box-shadow: 
    0 8rpx 32rpx rgba(102, 126, 234, 0.4),
    0 2rpx 8rpx rgba(102, 126, 234, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateY(0);
}

.generate-btn:active {
  transform: translateY(4rpx);
  box-shadow: 
    0 4rpx 16rpx rgba(102, 126, 234, 0.3),
    0 1rpx 4rpx rgba(102, 126, 234, 0.2);
}

.generate-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: shimmer 3s infinite;
}

.generate-btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.6s ease;
}

.generate-btn:active::after {
  width: 300rpx;
  height: 300rpx;
}

.btn-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  color: white;
}

.btn-icon {
  font-size: 40rpx;
  animation: sparkle 2s ease-in-out infinite;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.generation-hint {
  text-align: center;
}

.hint-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 生成中状态 */
.generating-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 60rpx;
}

.generating-animation {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 魔法球 */
.magic-orb {
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.orb-core {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60rpx;
  height: 60rpx;
  background: radial-gradient(circle, #fff 0%, rgba(255, 255, 255, 0.8) 50%, rgba(255, 255, 255, 0.3) 100%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: pulse 2s ease-in-out infinite;
}

.orb-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: rotate 3s linear infinite;
}

.ring1 {
  width: 80rpx;
  height: 80rpx;
  animation-duration: 2s;
}

.ring2 {
  width: 100rpx;
  height: 100rpx;
  animation-duration: 3s;
  animation-direction: reverse;
}

.ring3 {
  width: 120rpx;
  height: 120rpx;
  animation-duration: 4s;
}

/* 环绕粒子 */
.orbit-particles {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.orbit-particle {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: white;
  border-radius: 50%;
  animation: orbit 4s linear infinite;
}

.particle1 {
  top: 20rpx;
  left: 50%;
  animation-delay: 0s;
}

.particle2 {
  top: 50%;
  right: 20rpx;
  animation-delay: 1s;
}

.particle3 {
  bottom: 20rpx;
  left: 50%;
  animation-delay: 2s;
}

.particle4 {
  top: 50%;
  left: 20rpx;
  animation-delay: 3s;
}

/* 进度文本 */
.progress-text-container {
  text-align: center;
}

.progress-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.progress-dots {
  display: flex;
  justify-content: center;
  gap: 8rpx;
}

.progress-dots .dot {
  width: 8rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  animation: bounce 1.4s ease-in-out infinite;
}

.dot1 { animation-delay: 0s; }
.dot2 { animation-delay: 0.2s; }
.dot3 { animation-delay: 0.4s; }

/* 进度步骤 */
.progress-steps {
  display: flex;
  gap: 12rpx;
  justify-content: center;
}

.step {
  width: 16rpx;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.step.active {
  background: white;
  transform: scale(1.2);
}

/* 底部区域 */
.bottom-section {
  width: 100%;
  text-align: center;
}

.tips-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.tip-item {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

.generating-tips {
  margin-bottom: 40rpx;
}

.generating-tip {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

.back-btn {
  background: transparent;
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.1);
  transform: scale(0.95);
}

/* 装饰元素 */
.decoration-elements {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.decoration-star {
  position: absolute;
  font-size: 32rpx;
  animation: twinkle 3s ease-in-out infinite;
}

.star1 {
  top: 15%;
  left: 10%;
  animation-delay: 0s;
}

.star2 {
  top: 25%;
  right: 15%;
  animation-delay: 1s;
}

.star3 {
  bottom: 30%;
  left: 20%;
  animation-delay: 2s;
}

.star4 {
  bottom: 20%;
  right: 10%;
  animation-delay: 1.5s;
}

/* 动画 */
@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-15rpx);
  }
  60% {
    transform: translateY(-8rpx);
  }
}

@keyframes shimmer {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

@keyframes sparkle {
  0%, 100% {
    transform: scale(1) rotate(0deg);
  }
  50% {
    transform: scale(1.2) rotate(180deg);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.8;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

@keyframes rotate {
  0% {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  100% {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

@keyframes orbit {
  0% {
    transform: rotate(0deg) translateX(80rpx) rotate(0deg);
  }
  100% {
    transform: rotate(360deg) translateX(80rpx) rotate(-360deg);
  }
}

@keyframes twinkle {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}