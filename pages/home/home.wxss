/* pages/home/home.wxss */
.home-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 头部区域 */
.header-section {
  position: relative;
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  overflow: hidden;
}

.header-content {
  position: relative;
  z-index: 2;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}

.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 8s ease-in-out infinite;
}

.circle1 {
  width: 120rpx;
  height: 120rpx;
  top: 20%;
  left: 10%;
  animation-delay: 0s;
}

.circle2 {
  width: 80rpx;
  height: 80rpx;
  top: 60%;
  right: 15%;
  animation-delay: 2s;
}

.circle3 {
  width: 60rpx;
  height: 60rpx;
  bottom: 20%;
  left: 20%;
  animation-delay: 4s;
}

/* 内容区域 */
.content-section {
  background: #f8f9fa;
  border-radius: 40rpx 40rpx 0 0;
  min-height: calc(100vh - 240rpx);
  padding: 40rpx;
  position: relative;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(102, 126, 234, 0.2);
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #718096;
}

/* 空状态 */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 16rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3748;
}

.empty-desc {
  font-size: 28rpx;
  color: #718096;
  line-height: 1.6;
  max-width: 400rpx;
}

.retry-btn {
  margin-top: 16rpx;
}

/* 测试主题网格 */
.titles-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 32rpx;
}

.title-card {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  opacity: 0;
  transform: translateY(40rpx);
}

.title-card.slide-up {
  opacity: 1;
  transform: translateY(0);
}

.title-card.clicking {
  transform: scale(0.95);
}

.title-card:active {
  transform: scale(0.98);
}

/* 卡片图片 */
.card-image-container {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.card-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.title-card:active .card-image {
  transform: scale(1.05);
}

.card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    to bottom,
    transparent 0%,
    rgba(0, 0, 0, 0.1) 50%,
    rgba(0, 0, 0, 0.3) 100%
  );
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.title-card:active .card-overlay {
  opacity: 1;
}

.play-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #667eea;
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.title-card:active .play-icon {
  transform: scale(1);
}

/* 卡片内容 */
.card-content {
  padding: 32rpx;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.card-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #718096;
}

.card-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

/* 卡片装饰 */
.card-decoration {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

.decoration-dot {
  width: 8rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  margin-bottom: 6rpx;
  animation: pulse 2s ease-in-out infinite;
}

.dot1 { animation-delay: 0s; }
.dot2 { animation-delay: 0.5s; }
.dot3 { animation-delay: 1s; }

/* 底部提示 */
.bottom-tip {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #a0aec0;
}

/* 刷新提示 */
.refresh-tip {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1000;
}

.refresh-content {
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
}

.refresh-spinner {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-top: 2rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

/* 响应式适配 */
@media (min-width: 750rpx) {
  .titles-grid {
    grid-template-columns: 1fr 1fr;
  }
  
  .card-image-container {
    height: 300rpx;
  }
}

/* 动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
    opacity: 0.3;
  }
  50% {
    transform: translateY(-20px) rotate(180deg);
    opacity: 0.8;
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.6;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}