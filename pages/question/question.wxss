/* pages/question/question.wxss */
.question-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部进度区域 */
.progress-section {
  padding: 60rpx 40rpx 32rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  position: relative;
}

.exit-btn {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: transparent;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: white;
  transition: all 0.3s ease;
  z-index: 10;
}

.exit-btn:active {
  transform: scale(0.9);
}

.exit-icon {
  font-weight: normal;
  line-height: 1;
}

.progress-bar-container {
  width: 100%;
  margin-top: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  display: flex;
  align-items: center;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #fff 0%, rgba(255, 255, 255, 0.9) 50%, #fff 100%);
  border-radius: 20rpx;
  transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 40rpx;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
  animation: shimmer 2s infinite;
}

.current-question {
  font-size: 24rpx;
  font-weight: 600;
  color: #667eea;
  z-index: 1;
  position: relative;
}

.total-questions {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  font-weight: 600;
  color: white;
  z-index: 1;
}

/* 加载状态 */
.loading-section {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: white;
}

/* 题目内容区域 */
.question-section {
  flex: 1;
  padding: 0 40rpx 40rpx;
}

.question-content {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 题目图片 */
.question-image-container {
  position: relative;
  width: 100%;
  aspect-ratio: 3/4;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.question-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
  opacity: 0;
}

.image-overlay.show {
  opacity: 1;
}

.tap-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  animation: pulse 2s ease-in-out infinite;
}

.hint-icon {
  font-size: 48rpx;
  animation: bounce 1s ease-in-out infinite;
}

.hint-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

/* 答案选项浮层 */
.answers-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  animation: fadeIn 0.3s ease-out;
}

.answers-container {
  width: 80%;
  max-width: 600rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.answer-option {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: scaleIn 0.3s ease-out;
  animation-fill-mode: both;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.answer-option:nth-child(1) { animation-delay: 0.1s; }
.answer-option:nth-child(2) { animation-delay: 0.2s; }
.answer-option:nth-child(3) { animation-delay: 0.3s; }
.answer-option:nth-child(4) { animation-delay: 0.4s; }

.answer-option:active {
  transform: scale(0.95);
}

.answer-option.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  transform: scale(1.05);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.answer-label {
  width: 56rpx;
  height: 56rpx;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.answer-option.selected .answer-label {
  background: white;
  color: #667eea;
  box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.3);
}

.answer-text {
  font-size: 28rpx;
  line-height: 1.5;
  font-weight: 500;
  color: #2d3748;
  text-align: center;
  word-break: break-all;
}

.answer-option.selected .answer-text {
  color: white;
  font-weight: 600;
}

/* 选中效果 */
.selected-effect {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: ripple 0.6s ease-out;
}

/* 题目文本 */
.question-text-container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(15px);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.question-text {
  font-size: 34rpx;
  font-weight: 700;
  color: #2d3748;
  line-height: 1.6;
  text-align: center;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 提示文本 */
.question-hint {
  text-align: center;
  padding: 16rpx;
}

.question-hint .hint-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 底部装饰 */
.bottom-decoration {
  padding: 32rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.decoration-line {
  width: 60rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 2rpx;
}

.decoration-dots {
  display: flex;
  gap: 8rpx;
  max-width: 100%;
  overflow-x: auto;
  padding: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.dot.active {
  background: white;
  transform: scale(1.2);
}



/* 动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.8;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
}

@keyframes ripple {
  to {
    width: 200rpx;
    height: 200rpx;
    opacity: 0;
  }
}

/* 页面切换动画 */
.slide-left {
  animation: slideLeft 0.3s ease-out;
}

.slide-right {
  animation: slideRight 0.3s ease-out;
}

@keyframes slideLeft {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes slideRight {
  from {
    transform: translateX(-100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}