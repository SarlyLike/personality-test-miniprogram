/* pages/result/result.wxss */
.result-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 头部装饰 */
.header-decoration {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
}

.decoration-particle {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite;
}

.particle1 {
  width: 60rpx;
  height: 60rpx;
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.particle2 {
  width: 40rpx;
  height: 40rpx;
  top: 20%;
  right: 15%;
  animation-delay: 2s;
}

.particle3 {
  width: 80rpx;
  height: 80rpx;
  bottom: 30%;
  left: 20%;
  animation-delay: 4s;
}

.particle4 {
  width: 30rpx;
  height: 30rpx;
  top: 60%;
  right: 10%;
  animation-delay: 6s;
}

/* 滑动页面容器 */
.pages-swiper {
  height: 100vh;
  width: 100%;
  position: relative;
  z-index: 1;
}

.page-item {
  height: 100vh;
  width: 100%;
}

.page-content {
  height: 100%;
  padding: 80rpx 40rpx 120rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 通用标题装饰 */
.title-decoration {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.decoration-line {
  width: 60rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-top: 16rpx;
}

/* 第一页：专属角色展示 */
.page-role {
  justify-content: space-between;
  text-align: center;
}

.role-header {
  flex-shrink: 0;
}

.role-name-container {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  margin-top: 24rpx;
}

.role-name {
  font-size: 52rpx;
  font-weight: 800;
  color: white;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
}

.role-badge {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
  backdrop-filter: blur(10rpx);
  color: white;
  padding: 12rpx 20rpx;
  border-radius: 25rpx;
  font-size: 22rpx;
  font-weight: 600;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 角色形象 */
.role-image-container {
  position: relative;
  width: 800rpx;
  height: 1066rpx;
  margin: 40rpx auto;
  flex-shrink: 0;
  transition: transform 0.3s ease;
}

.role-image-container:active {
  transform: scale(0.95);
}

.image-frame {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.role-image {
  width: 100%;
  height: 100%;
}

.image-glow {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 100%);
  border-radius: 42rpx;
  z-index: -1;
  animation: glow 3s ease-in-out infinite alternate;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 32rpx;
}

.role-image-container:active .image-overlay {
  opacity: 1;
}

.overlay-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.overlay-text {
  font-size: 26rpx;
  color: white;
  font-weight: 500;
}

/* 角色座右铭 */
.role-sentence-container {
  position: relative;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 40rpx 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: transform 0.3s ease;
  flex-shrink: 0;
}

.role-sentence-container:active {
  transform: scale(0.98);
}

.quote-decoration {
  position: relative;
  text-align: center;
  margin-bottom: 24rpx;
}

.quote-mark {
  font-size: 48rpx;
  font-weight: 300;
  color: rgba(255, 255, 255, 0.6);
  position: absolute;
  top: -10rpx;
}

.quote-mark.left {
  left: -20rpx;
}

.quote-mark.right {
  right: -20rpx;
}

.role-sentence {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  line-height: 1.6;
  font-style: italic;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  padding: 0 40rpx;
}

.copy-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.hint-icon {
  font-size: 20rpx;
}

/* 滑动提示 */
.swipe-hint {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: bounce 2s ease-in-out infinite;
}

.hint-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.swipe-hint .hint-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
}

.hint-arrow {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.arrow-icon {
  font-size: 20rpx;
  color: white;
  animation: arrowPulse 1.5s ease-in-out infinite;
}

/* 第二页：性格维度分析 */
.page-analysis {
  justify-content: flex-start;
}

.analysis-header {
  flex-shrink: 0;
  text-align: center;
  margin-bottom: 40rpx;
}

.chart-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chart-container {
  margin-bottom: 40rpx;
}

.chart-background {
  position: relative;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
  padding: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.dimensions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  width: 100%;
  max-width: 600rpx;
}

.dimension-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: transform 0.3s ease;
}

.dimension-card:active {
  transform: scale(0.95);
}

.dimension-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.dimension-name {
  font-size: 26rpx;
  font-weight: 600;
  color: white;
}

.dimension-value {
  font-size: 24rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.9);
}

.dimension-bar {
  height: 6rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.dimension-fill {
  height: 100%;
  background: linear-gradient(90deg, #fff 0%, rgba(255, 255, 255, 0.8) 100%);
  border-radius: 3rpx;
  transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.dimension-level {
  text-align: center;
}

.level-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
}

/* 第三页：角色解析和分享 */
.page-share {
  justify-content: flex-start;
}

.share-header {
  flex-shrink: 0;
  text-align: center;
  margin-bottom: 40rpx;
}

.description-section {
  flex: 1;
  margin-bottom: 40rpx;
}

.description-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 40rpx 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 85%;
  margin: 0 auto;
}

.description-icon {
  font-size: 48rpx;
  margin-bottom: 24rpx;
}

.description-content {
  width: 100%;
}

.description-text {
  font-size: 30rpx;
  font-weight: 500;
  color: white;
  line-height: 1.6;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.actions-section {
  flex-shrink: 0;
  width: 85%;
  margin: 0 auto;
  margin-top: 32rpx;
}

/* 按钮行布局 */
.action-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

/* 统一的按钮样式 */
.action-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: all 0.3s ease;
  min-height: 120rpx;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.15);
}

/* 特殊按钮样式 */
.share-btn {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

/* 按钮图标和文本样式 */
.action-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
  flex-shrink: 0;
}

.action-text {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-title {
  font-size: 26rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 4rpx;
  text-align: center;
}

.action-desc {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
  text-align: center;
}



.bottom-tips {
  margin-top: 32rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-item {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
  opacity: 0.9;
}

/* 页面指示器 */
.page-indicators {
  position: fixed;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  z-index: 10;
}

.indicator {
  width: 8rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.indicator.active {
  background: rgba(255, 255, 255, 0.8);
  height: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 255, 255, 0.3);
}

/* 浮动返回按钮 */
.floating-home-btn {
  position: fixed;
  top: 60rpx;
  left: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.floating-home-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.2);
}

.home-icon {
  font-size: 32rpx;
  color: white;
}

/* 动画效果 */
@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20rpx); }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
  40% { transform: translateX(-50%) translateY(-10rpx); }
  60% { transform: translateX(-50%) translateY(-5rpx); }
}

@keyframes arrowPulse {
  0%, 100% { opacity: 0.7; transform: translateY(0); }
  50% { opacity: 1; transform: translateY(-2rpx); }
}

@keyframes glow {
  0% { opacity: 0.5; transform: scale(1); }
  100% { opacity: 0.8; transform: scale(1.05); }
}

@keyframes iconGlow {
  0% { opacity: 0.6; }
  100% { opacity: 0.9; }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .role-name {
    font-size: 48rpx;
  }
  
  .role-image-container {
    width: 280rpx;
    height: 373rpx;
  }
  
  .dimensions-grid {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }
  
  .secondary-actions {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }
}